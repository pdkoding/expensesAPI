{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom"],
    "alwaysStrict": true,
    "strict": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    ".idea",
    "node_modules",
    "coverage",
    "docs",
    "tmp"
  ]
}